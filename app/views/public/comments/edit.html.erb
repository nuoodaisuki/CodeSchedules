<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">

      <h2 class="mt-3">コメント編集画面</h2>

      <%= form_with model: [@comment.post, @comment], local: true do |f| %>

        <div>
          <%= f.label :content, "コメント内容", class: "form-label d-block" %>
          <%= f.text_area :content, class: "form-control", style: "height: 300px;" %>
        </div>

        <div class="mt-3">
          <%= f.submit "更新", class: "btn btn-primary", style: "padding: 10px 40px;" %>
        </div>

      <% end %>
      
    </div>
  </div>
</div>