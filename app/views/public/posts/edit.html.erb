<div style="max-width: 90%; margin: 0 auto;">

<h3 class="mt-3 mb-2">実装にかかった時間と実装のコツや感想を書いて下さい！</h3>

  <%= form_with model: @post, url: post_path(@post), method: :patch, local: true do |f| %>

    <!-- かかった時間 (3桁用) -->
    <div class="mb-3">
      <%= f.label :time_taken, "かかった時間 (分)", class: "form-label d-block" %>
      <%= f.text_field :time_taken, class: "form-control", style: "width: 100px;" %>
    </div>

    <!-- 自由記述 -->
    <div class="mb-3">
      <%= f.label :note, "感想やメモなど", class: "form-label d-block" %>
      <%= f.text_area :note, class: "form-control", style: "width: 90%; height: 300px;" %>
    </div>

    <!-- チェックボックス -->
    <div class="form-check mb-4" style="display: flex; align-items: center;">
      <%= f.check_box :is_completion, { class: 'form-check-input', style: "transform: scale(1.5); margin-right: 10px;", required: true }, true, false %>
      <%= f.label :is_completion, 'タスク完了', class: 'form-check-label' %>
    </div>


    <!-- 更新ボタン -->
    <div class="mb-3">
      <%= f.submit "更新", class: "btn btn-primary", style: "padding: 10px 40px;" %>
    </div>
  <% end %>
</div>
