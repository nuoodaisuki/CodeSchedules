<% if @user.errors.any? %>
  <div class="text-center alert alert-danger mt-3">
    <%= @user.errors.count %>件のエラーが発生しました
    <ul style="list-style-position: inside; padding-left: 0;">
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-5" style="max-width: 60%; margin: 0 auto;">
  <!-- タイトル中央寄せ -->
  <h2 class="text-center mb-4">アカウント編集</h2>

  <!-- フォーム -->
  <%= form_with model: @user, url: change_path(@user), method: :patch, local: true do |f| %>
    <div class="form-group">
      <%= f.label :image, "プロフィール写真" %>
      <%= f.file_field :image, accept: "image/*", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :introduction, "自己紹介" %>
      <%= f.text_area :introduction, class: "form-control", placeholder: "自己紹介を入力してください" %>
    </div>

    <!-- ボタン -->
    <div class="d-flex justify-content-center mt-4 mb-4">
      <%= f.submit "保存", class: "btn btn-primary btn-lg", style: "width: 150px; margin-right: 20px;" %>
      <%= link_to "退会する", withdraw_path(current_user), method: :delete,
        data: { confirm: "本当に退会しますか？" },
        class: "btn btn-danger btn-lg", style: "width: 150px; margin-left: 20px;" %>
    </div>
  <% end %>
</div>
